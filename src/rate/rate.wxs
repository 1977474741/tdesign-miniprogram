module.exports = {
  getText: function (texts, val) {
    var curVal = Math.floor(val - 1);
    return texts[curVal];
  },
  getIconName: function (defaultValue, value, index, allowHalf, icon, halfIcon, voidIcon) {
    var curVal = value ? value : defaultValue;
    if (curVal - index >= 1) {
      return icon;
    } else if (allowHalf && curVal - index > 0) {
      return halfIcon;
    } else {
      return voidIcon;
    }
  },
  getIconColor: function (defaultValue, value, index, allowHalf, disabled, color, disabledColor) {
    var curVal = value ? value : defaultValue;
    if (curVal - index >= 1) {
      return disabled ? disabledColor : color;
    } else if (allowHalf && curVal - index > 0) {
      return 'transparent';
    } else {
      return '#E3E6EB';
    }
  },
};
