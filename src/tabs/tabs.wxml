<wxs src="./tabs.wxs" module="filters" />
<view class="t-tabs t-is-{{tabPosition}}">
  <scroll-view
    class="t-tabs__nav-wrapper"
    enable-flex
    scroll-x="{{scrollX}}"
    scroll-y="{{scrollY}}"
  >
    <view class="t-tabs__nav {{scrollable ? 't-tabs__nav--scrollable' : '' }}">
      <view
        wx:for="{{tabs}}"
        wx:key="index"
        data-index="{{index}}"
        class="t-tabs__tabbar {{item.disabled ? 't-tabs__tabbar--disabled' : '' }} {{currentIndex === index ? 't-is-active' : ''}}"
        bind:tap="onTabTap"
      >
        <label class="t-tabs__title {{ ellipsis ? 't-is-ellipsis' : '' }}">{{item.title}}</label>
      </view>
      <view class="t-tabs__track" style="{{trackStyle}}" />
    </view>
  </scroll-view>
  <view
    class="t-tabs__content"
    bind:touchstart="onTouchStart"
    bind:touchmove="onTouchMove"
    bind:touchend="onTouchEnd"
    bind:touchcancel="onTouchEnd"
  >
    <view
      class="t-tabs__content-inner {{animated ? 't-tabs__content-inner--animated' : ''}}"
      style="{{animated ? filters.animate({duration: duration,currentIndex:currentIndex, direction}) : ''}}"
    >
      <slot />
    </view>
  </view>
</view>
