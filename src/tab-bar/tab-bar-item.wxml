<view class="{{classPrefix}} {{icon ? '' : prefix+'-is-bordered'}}">
  <view
    class="{{classPrefix}}__content {{isChecked ? prefix+'-is-checked' : ''}}"
    style="color: {{isChecked ? activeColor: color}}"
    bindtap="toggle"
  >
    <view class="{{classPrefix}}__icon" wx:if="{{icon}}">
      <t-badge
        wx:if="{{badgeProps.dot || badgeProps.content}}"
        color="{{badgeProps.color}}"
        count="{{badgeProps.count}}"
        max-count="{{badgeProps.maxCount}}"
        dot="{{badgeProps.dot}}"
        content="{{badgeProps.content}}"
        size="{{badgeProps.size}}"
        showZero="{{badgeProps.showZero}}"
        offset="{{badgeProps.offset}}"
        hasSlot
      >
        <t-icon name="{{icon}}" size="24px"></t-icon>
      </t-badge>
      <t-icon wx:else name="{{icon}}" size="24px"></t-icon>
    </view>
    <view class="{{classPrefix}}__text {{icon ? prefix+'-size-s' : ''}}">
      <view class="{{classPrefix}}__icon-menu" wx:if="{{hasChildren}}"></view>
      <slot />
    </view>
  </view>

  <view class="{{classPrefix}}__spread" wx:if="{{hasChildren && isSpread}}">
    <view
      class="{{classPrefix}}__spread-item"
      wx:for="{{subTabBar}}"
      wx:for-item="child"
      wx:for-index="index"
      wx:key="index"
      bindtap="selectChild"
      data-name="{{child.name || index}}"
      >{{ child.text }}</view
    >
  </view>
</view>
