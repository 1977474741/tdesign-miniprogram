<view wx:if="{{ loading }}" class="t-class {{classPrefix}} {{animation? 'animate-'+animation:''}} ">
  <view wx:if="{{ theme === 'avatar-text' }}" class="t-class-avatar {{classPrefix}}__avatar " />
  <view wx:if="{{theme === 'avatar-text' || 'text' }}" class="{{classPrefix}}__content">
    <view
      wx:for="{{ row }}"
      wx:key="index"
      wx:for-index="index"
      class="t-class-text {{classPrefix}}__row"
      style="width: {{rowWidthArray.length > 0 && rowWidthArray[index] ? rowWidthArray[index] : rowWidth}}; {{rowHeight && rowHeight[index] ? 'height:' + rowHeight[index] : ''}}"
    />
  </view>
</view>
<view wx:else class="{{classPrefix}}__content ">
  <slot />
</view>
