<wxs src="../common/utils.wxs" module="utils" />
<view class="{{showInfo ? 't-progress' : 't-progress t-progress--without-text'}}">
  <view class="t-progress-bar">
    <view
      class="t-progress-bar__outer"
      style="{{ bgColor ? 'height:' + strokeWidth + 'px; background-color: ' + bgColor : 'height: ' + strokeWidth + 'px;'}}"
    >
      <view
        class="t-progress-bar__inner t-progress-bar__inner--{{ type }}"
        style="{{ activeColor ? 'width: ' +percent + '%;background-color: ' + activeColor :'width: ' + percent + '%;'}}"
      ></view>
    </view>
  </view>
  <block wx:if="{{ showInfo }}">
    <view wx:if="{{textColor}}" class="t-progress__info" style="color: {{textColor}}"
      >{{percent + '%'}}</view
    >
    <view wx:else class="t-progress__info t-progress__info--{{ type }}">{{percent + '%'}}</view>
  </block>
</view>
