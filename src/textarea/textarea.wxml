<view class="{{classPrefix}} t-class">
  <view wx:if="{{ name && name.length > 0 }}" class="{{classPrefix}}__name t-class-name">
    <view>{{ name }}</view>
  </view>
  <view class="{{classPrefix}}__wrapper">
    <textarea
      maxlength="{{maxlength}}"
      disabled="{{disabled}}"
      placeholder="{{placeholder}}"
      class="t-class-textarea"
      placeholder-class="{{classPrefix}}__wrapper__placeholder t-class-placeholder"
      value="{{value}}"
      auto-focus="{{autofocus}}"
      focus="{{focus}}"
      auto-height="{{autoHeight}}"
      adjust-position="{{aujustPosition}}"
      confirm-type="{{confirmType}}"
      confirm-hold="{{confirmHold}}"
      bindinput="onInput"
      bindfocus="onFocus"
      bindblur="onBlur"
      bindconfirm="onConfirm"
      bindlinechange="onLineChange"
    />
    <view class="{{classPrefix}}__wrapper__count"> {{inputValue.length}} / {{maxlength}} </view>
  </view>
</view>
