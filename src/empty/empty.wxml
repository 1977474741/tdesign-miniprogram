<wxs src="./empty.wxs" module="utils" />

<view class="t-class t-empty" style="background-color: {{backColor}}">
  <view class="t-empty__content">
    <image
      class="t-empty__img"
      style="width: {{ utils.addUnit(size) }}; height: {{ utils.addUnit(size) }}"
      src="{{image}}"
      mode="aspectFit"
    />
    <view
      wx:if="{{description}}"
      class="t-empty__description"
      style="font-size: {{ utils.addUnit(textSize) }}; color: {{textColor}}"
      >{{description}}</view
    >
    <slot />
  </view>
</view>
