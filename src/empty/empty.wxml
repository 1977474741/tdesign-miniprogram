<wxs src="./empty.wxs" module="utils" />

<view class="t-class t-empty">
  <view class="t-empty__content">
    <image class="t-empty__img t-class-image" src="{{image}}" mode="aspectFit" />
    <view
      wx:if="{{description}}"
      class="t-empty__description t-class-description t-empty__description-{{theme}}"
      >{{description}}</view
    >
    <slot />
  </view>
</view>
