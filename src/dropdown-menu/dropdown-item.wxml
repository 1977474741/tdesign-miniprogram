<view class="{{base}} {{show ? prefix + '-is-expanded' : ''}}" style="top:{{top}}px">
  <view
    wx:if="{{show && showOverlay}}"
    class="t-mask"
    bindtap="clickOverlay"
    catchtouchmove="catchtouchmove"
  ></view>
  <view class="{{contentClasses}} {{base}}__content" style="transition: all 200ms ease">
    <view class="{{base}}__bd" wx:if="{{show}}">
      <block wx:if="{{optionsLayout === 'columns'}}">
        <!-- 单选列表 -->
        <t-cell-group wx:if="{{selectMode === 'single'}}">
          <t-radio-group value="{{selected}}" bordered="false" bind:change="updateSelected">
            <t-radio
              wx:for="{{options}}"
              wx:key="index"
              name="{{item.value}}"
              title="{{item.title}}"
              disabled="{{item.disabled}}"
            ></t-radio>
          </t-radio-group>
        </t-cell-group>
        <!-- 多选列表 -->
        <t-cell-group wx:if="{{selectMode === 'multi'}}">
          <t-checkbox-group value="{{selected}}" bordered="false" bind:change="updateSelected">
            <t-checkbox
              wx:for="{{options}}"
              wx:key="index"
              name="{{item.value}}"
              title="{{item.title}}"
              disabled="{{item.disabled}}"
            ></t-checkbox>
          </t-checkbox-group>
        </t-cell-group>
      </block>
      <block wx:elif="{{optionsLayout === 'tree'}}">
        <!-- 树形列表 ST -->
        <!-- TODO 逻辑待实现 -->
        <t-cell-group class="{{prefix}}-tree-cell-group" wx:for="{{[0,1,2]}}" wx:key="item">
          <t-radio-group selected="{{selected}}" bindchanged="updateTreeSelected">
            <block wx:for="{{options}}" wx:key="value">
              <t-cell value-align="left">
                <t-radio
                  selected="{{selected}}"
                  value="{{item.value}}"
                  title="{{item.title}}"
                  disabled="{{item.disabled}}"
                ></t-radio>
              </t-cell>
            </block>
          </t-radio-group>
        </t-cell-group>
        <!-- 树形列表 ED -->
      </block>
      <block wx:elif="{{optionsLayout === 'slot'}}">
        <slot></slot>
      </block>
    </view>
    <view class="{{base}}__ft" wx:if="{{selectMode === 'multi' || optionsLayout === 'tree'}}">
      <t-button class="t-button" theme="default" disabled="{{isBtnDisabled}}" bindtap="resetSelect"
        >重置</t-button
      >
      <t-button
        class="t-button"
        theme="primary"
        disabled="{{isBtnDisabled}}"
        bindtap="confirmSelect"
        >确定</t-button
      >
    </view>
  </view>
</view>
