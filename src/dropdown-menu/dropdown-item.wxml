<view class="{{base}} {{show ? prefix + '-is-expanded' : ''}}" style="top:{{top}}px">
  <view wx:if="{{show && showOverlay}}" class="t-mask" bindtap="clickOverlay"></view>
  <view class="{{base}}__content" style="transition: all 200ms ease;">
    <view class="{{base}}__bd" wx:if="{{show}}">
      <view class="t-cell-group t-cell-group-container border--top-bottom">
        <view class="t-radio-group">
          <block wx:for="{{options}}">
            <view
              data-value="{{item.value}}"
              bindtap="itemSelected"
              class="t-cell t-cell--theme-default"
            >
              <view
                class="t-cell__value t-cell__left {{base}}__radio {{ selected == item.value ? prefix + '-is-checked' : ''}}"
              >
                <view class="t-radio t-radio__content-title">{{item.title}}</view>
              </view>
            </view>
          </block>
        </view>
      </view>
    </view>
    <view class="{{name}}__ft" wx:if="{{selectMode === 'multi' || optionsLayout === 'tree'}}">
      <t-button theme="default" disabled="{{isBtnDisabled}}" bindtap="resetSelect">重置</t-button>
      <t-button theme="primary" disabled="{{isBtnDisabled}}" bindtap="confirmSelect">确定</t-button>
    </view>
  </view>
</view>
