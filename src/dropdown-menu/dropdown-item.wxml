<view class="{{classPrefix}} {{show ? prefix + '-is-expanded' : ''}}" style="top:{{top}}px">
  <view wx:if="{{show}}" class="t-mask" bindtap="clickOverlay" catchtouchmove="catchtouchmove"></view>
  <view class="{{contentClasses}} {{classPrefix}}__content" style="transition: all 200ms ease">
    <view class="{{classPrefix}}__bd" wx:if="{{show}}">
      <block wx:if="{{optionsLayout === 'columns'}}">
        <!-- 单选列表 -->
        <t-cell-group wx:if="{{!multiple}}" bordered="{{false}}">
          <t-radio-group value="{{selected}}" bordered="{{false}}" bind:change="updateSelected">
            <t-radio
              wx:for="{{options}}"
              wx:key="index"
              icon="stroke-line"
              align="right"
              value="{{item.value}}"
              label="{{item.label}}"
              disabled="{{item.disabled}}"
            ></t-radio>
          </t-radio-group>
        </t-cell-group>
        <!-- 多选列表 -->
        <view wx:else>
          <t-checkbox-group
            t-class="{{classPrefix}}__checkbox-group"
            custom-style="grid-template-columns: repeat({{optionsColumns}}, 1fr)"
            value="{{selected}}"
            bordered="{{false}}"
            bind:change="updateSelected"
          >
            <block wx:for="{{options}}" wx:key="index">
              <t-checkbox
                class="{{classPrefix}}__checkbox-item"
                theme="tag"
                value="{{item.value}}"
                label="{{item.label}}"
                disabled="{{item.disabled}}"
              ></t-checkbox>
            </block>
          </t-checkbox-group>
        </view>
      </block>
      <block wx:elif="{{optionsLayout === 'tree'}}">
        <!-- 树形列表 ST -->
        <!-- TODO 逻辑待实现 -->
        <t-cell-group class="{{prefix}}-tree-cell-group" wx:for="{{treeOptions}}" wx:key="level" wx:for-index="level">
          <t-radio-group
            wx:if="{{level < treeState.leafLevel}}"
            value="{{treeState.selectList[level]}}"
            data-level="{{level}}"
            bind:change="selectTreeNode"
          >
            <t-radio
              wx:for="{{treeOptions[level]}}"
              wx:key="index"
              value="{{item.value}}"
              borderless
              label="{{item.label}}"
            ></t-radio>
          </t-radio-group>
          <block wx:else>
            <block wx:if="{{!multiple}}">
              <!-- 树形列表 - 叶子节点（单选） ST -->
              <t-radio-group
                data-level="{{level}}"
                value="{{treeState.selectList[level]}}"
                bind:change="updateSelected"
              >
                <t-radio
                  wx:for="{{treeOptions[level]}}"
                  wx:key="index"
                  name="{{item.value}}"
                  borderless
                  align="right"
                  label="{{item.label}}"
                ></t-radio>
              </t-radio-group>
              <!-- 树形列表 - 叶子节点（单选） ED -->
            </block>
            <block wx:elif="{{multiple}}">
              <!-- 树形列表 - 叶子节点（多选） ST -->
              <t-checkbox-group
                value="{{treeState.selectList[level]}}"
                borderless
                bind:change="updateSelected"
                data-level="{{level}}"
              >
                <view class="{{prefix}}-checkbox-wrap" wx:for="{{treeOptions[level]}}" wx:key="index">
                  <t-checkbox align="right" name="{{item.value}}" label="{{item.label}}"></t-checkbox>
                </view>
              </t-checkbox-group>
              <!-- 树形列表 - 叶子节点（多选） ED -->
            </block>
            <!-- 树形列表 - 叶子节点 ED -->
          </block>
        </t-cell-group>
        <!-- 树形列表 ED -->
      </block>
      <block wx:elif="{{optionsLayout === 'slot'}}">
        <slot></slot>
      </block>
    </view>
    <view class="{{classPrefix}}__foot" wx:if="{{multiple || optionsLayout === 'tree'}}">
      <t-button-group>
        <t-button
          block
          t-class="button button--reset"
          theme="default"
          disabled="{{isBtnDisabled}}"
          bindtap="resetSelect"
          >重置</t-button
        >
        <t-button
          block
          t-class="button button--confirm"
          theme="primary"
          disabled="{{isBtnDisabled}}"
          bindtap="confirmSelect"
          >确定</t-button
        >
      </t-button-group>
    </view>
  </view>
</view>
