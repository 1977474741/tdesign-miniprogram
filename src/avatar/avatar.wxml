<view class="{{ classPrefix }}--wrapper {{ classPrefix }}--{{ size }} t-class">
  <view
    class="{{ classPrefix }} {{ classPrefix }}--{{ size }} {{ shape === 'round' ? classPrefix + '--round' : '' }} t-image-class"
  >
    <t-image
      wx:if="{{ !icon && !alt }}"
      class="t-image-component"
      t-class="t-image"
      src="{{ image }}"
      mode="aspectFill"
      binderror="onLoadError"
    >
    </t-image>
    <view wx:if="{{ !!alt }}" class="{{ classPrefix }}__text t-alt-class">{{ alt }}</view>
    <view wx:if="{{ !!icon }}" class="{{ classPrefix }}__icon t-icon-class">
      <t-icon name="{{ icon }}" />
    </view>
  </view>
  <t-badge wx:if="{{ dot || info }}" dot="{{ dot }}" count="{{ info }}"></t-badge>
</view>
