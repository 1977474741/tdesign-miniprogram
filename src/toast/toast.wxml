<view class="{{show?classPrefix+'-show':classPrefix+'-hidden'}}">
  <block wx:if="{{showOverlay}}">
    <view class="{{classPrefix}}__mask"></view>
  </block>

  <view class="{{classPrefix}}__main">
    <block wx:if="{{icon || type}}">
      <view class="{{classPrefix}}__main-icon">
        <block wx:if="{{type}}">
          <view class="{{classPrefix}}__main-icon__icon">
            <t-icon
              wx:if="{{type === 'success'}}"
              name="tick"
              color="#FFFFFF"
              size="96rpx"
            ></t-icon>
            <t-icon
              wx:if="{{type === 'warning'}}"
              name="warning"
              color="#FFFFFF"
              size="96rpx"
            ></t-icon>
            <t-icon
              wx:if="{{type === 'loading'}}"
              name="loading"
              color="#FFFFFF"
              size="96rpx"
            ></t-icon>
          </view>
        </block>
        <block wx:else>
          <image class="{{classPrefix}}__main-icon__icon" src="{{icon}}"></image>
        </block>

        <block wx:if="{{message}}">
          <view class="{{classPrefix}}__main-icon__text">{{message}}</view>
        </block>
      </view>
    </block>
    <block wx:else>
      <view class="{{classPrefix}}__main-text {{classPrefix}}__main-text--{{position}}">
        {{message}}
      </view>
    </block>
  </view>
</view>
