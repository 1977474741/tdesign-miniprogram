<view class="{{classPrefix}} t-class ">
  <!-- icon left -->
  <view
    class="{{classPrefix}}__icon-left t-class-icon"
    data-target="icon"
    bind:tap="onChange"
    wx:if="{{align === 'left'}}"
  >
    <block wx:if="{{icon.length > 0}}">
      <!-- <slot name="icon"></slot> -->
      <view class="{{classPrefix}}__image">
        <image src="{{active ? icon[0] : icon[1]}}" class="{{classPrefix}}-icon__image" webp />
      </view>
    </block>
    <block wx:else>
      <t-icon
        name="{{active ? (halfChecked ? 'minus-circle-filled' : 'check-circle-filled') : 'circle'}}"
        class="{{classPrefix}}__btn {{active ? classPrefix + '-is-checked' : ''}} {{disabled ? classPrefix + '-is-disabled' : ''}}"
      />
    </block>
  </view>
  <!-- 文本内容 -->
  <view
    class="{{classPrefix}}__content {{disabled ? classPrefix + '-is-disabled-context' : ''}}"
    data-target="text"
    bind:tap="onChange"
  >
    <!-- title -->
    <view class="{{classPrefix}}__title t-class-label" style="-webkit-line-clamp:{{maxLabelRow}}"
      >{{label}}</view
    >
    <!-- content -->
    <view
      class="{{classPrefix}}__description t-class-content "
      style="-webkit-line-clamp:{{maxContentRow}}"
      >{{content}}
      <slot />
    </view>
  </view>
  <!-- icon right -->
  <view
    class="{{classPrefix}}__icon-right t-class-icon"
    data-target="icon"
    bind:tap="onChange"
    wx:if="{{align === 'right'}}"
  >
    <block wx:if="{{icon.length>0}}">
      <!-- <slot name="icon"></slot> -->
      <view class="{{classPrefix}}__image">
        <image src="{{active ? icon[0] : icon[1]}}" class="{{classPrefix}}-icon__image" webp />
      </view>
    </block>
    <block wx:else>
      <t-icon
        name="{{active ? (halfChecked ? 'minus-circle-filled' : 'check-circle-filled') : 'circle'}}"
        class="{{classPrefix}}__btn {{disabled ? classPrefix + '-is-disabled' : ''}} {{active ? classPrefix + '-is-checked' : ''}}"
      />
    </block>
  </view>
  <!-- 内置下边框 -->
  <view
    class="{{classPrefix}}-border {{classPrefix}}{{align==='left'?'-border-left':'-border-right'}}"
  ></view>
</view>
