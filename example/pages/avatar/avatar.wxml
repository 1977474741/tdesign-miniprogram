      </view>
      <view class="gutter-column-32"></view>
      <view class="avatar-example">
        <t-avatar shape="round" image="{{pics[0]}}" badge-props="{{ {count: 2} }}" size="large" />
      </view>
      <view class="gutter-column-32"></view>
      <view class="avatar-example">
        <t-avatar shape="round" image="{{pics[0]}}" badge-props="{{ {count: 2} }}" size="medium" />
