<view class="wrapper">
  <view wx:if="{{tab==0}}">
    <t-dropdown-menu>
      <t-dropdown-item title="单选菜单" options="{{optionsS}}" model:selected="{{selectedS}}"></t-dropdown-item>
      <t-dropdown-item title="多选菜单" options="{{optionsM}}" selected="{{selectedM}}" bindselected="multiSelected" selectMode="multi"></t-dropdown-item>
    </t-dropdown-menu>
    <view>单项选择选中项：{{selectedS}}</view>
    <view>多项选择选中项：{{selectedM}}</view>
  </view>

  <view wx:if="{{tab==1}}">
    <t-dropdown-menu>
      <t-dropdown-item title="禁用菜单" disabled="{{true}}"></t-dropdown-item>
      <t-dropdown-item title="禁用选项" options="{{optionsD}}" model:selected="{{selectedD}}"></t-dropdown-item>
    </t-dropdown-menu>
    <view>禁用了序号为3的倍数的选项。</view>
  </view>

  <view wx:if="{{tab==2}}">
    <t-dropdown-menu>
      <t-dropdown-item title="两栏菜单" optionsColumns="2" options="{{optionsM}}" selected="{{selectedM}}" bindselected="multiSelected" selectMode="multi"></t-dropdown-item>
      <t-dropdown-item title="三栏菜单" optionsColumns="3" options="{{optionsM}}" selected="{{selectedM}}" bindselected="multiSelected" selectMode="multi"></t-dropdown-item>
    </t-dropdown-menu>
    <view>选中项：{{selectedM}}</view>
  </view>

  <view wx:if="{{tab==3}}">
    <t-dropdown-menu>
      <t-dropdown-item title="树形选单" optionsLayout="tree" options="{{optionsM}}" selected="{{selectedM}}" bindselected="multiSelected"></t-dropdown-item>
    </t-dropdown-menu>
    <view>选中项：（逻辑待实现）</view>
  </view>

  <view wx:if="{{tab==4}}">
    <t-dropdown-menu>
      <t-dropdown-item title="自定义选单" optionsLayout="slot">
        自定义内容（如按钮等）
      </t-dropdown-item>
    </t-dropdown-menu>
  </view>
</view>

<view class="buttons">
  <button class="t-button" bindtap="switchTab" data-tab="0">基础用法</button>
  <button class="t-button" bindtap="switchTab" data-tab="1">禁用菜单及选项</button>
  <button class="t-button" bindtap="switchTab" data-tab="2">菜单选项分栏</button>
  <button class="t-button" bindtap="switchTab" data-tab="3">树形选单</button>
  <button class="t-button" bindtap="switchTab" data-tab="4">自定义选单</button>
</view>
