<block wx:if="{{demoType === 'base-default'}}">
  <t-navbar title="标题" />
</block>
<block wx:if="{{demoType === 'base-back'}}">
  <t-navbar title="标题" leftIcon="arrow-left" />
</block>
<block wx:if="{{demoType === 'base-back-home'}}">
  <t-navbar title="标题" leftIcon="arrow-left" homeIcon="arrow-left" bindgohome="onGoHome" />
</block>
<block wx:if="{{demoType === 'base-brand'}}">
  <t-navbar leftIcon="slot">
    <span slot="left-icon" class="slot-left">品牌名称</span>
  </t-navbar>
</block>
<block wx:if="{{demoType === 'base-img'}}">
  <t-navbar leftIcon="slot">
    <t-image
      t-class="img"
      class="size-l radius-m slot-left"
      src="https://0729-75822.gzc.vod.tencent-cloud.com/site_doc/tdesign-logo.png"
      mode="aspectFill"
      slot="left-icon"
    ></t-image>
  </t-navbar>
</block>

<block wx:if="{{demoType === 'base-brand-long'}}">
  <t-navbar leftIcon="slot" t-class-left-icon="left-icon">
    <span slot="left-icon" class="long-brand"
      >品牌名称最长最长最长最长最长最长最长最长最长最长最长最长最长最长最长最长最长最长</span
    >
  </t-navbar>
</block>

<block wx:if="{{demoType === 'slot-left'}}">
  <t-navbar
    title="左侧胶囊位置插槽"
    visible="{{visible}}"
    fixed="{{fixed}}"
    showBack="never"
    showHome="never"
  >
    <view slot="left" class="slot-left">左侧胶囊插槽</view>
  </t-navbar>
</block>

<block wx:if="{{demoType === 'slot-center'}}">
  <t-navbar title="" visible="{{visible}}" fixed="{{fixed}}">
    <view slot="center" class="slot-center">标题位置</view>
  </t-navbar>
</block>

<block wx:if="{{demoType === 'slot-custom'}}">
  <t-navbar visible="{{visible}}" fixed="{{fixed}}" custom-slot="custom">
    <view slot="custom" class="slot-custom">除右边系统胶囊，这里整个位置都是你的...</view>
  </t-navbar>
</block>

<view class="demo">
  <view class="demo-title">NavBar 导航栏</view>
  <view class="demo-desc"
    >很多文字很多文字很多文字很多文字很多文字很多文字很多文字很多文字很多文字很多文字很多文字很多文字很多文字很多文字很多文字很多文字</view
  >
  <t-demo title="01 类型" operList="{{normalOperList}}" bindclickoper="clickHandle" />
  <t-demo title="02 特殊类型" operList="{{specialOperList}}" bindclickoper="clickHandle" />
</view>
