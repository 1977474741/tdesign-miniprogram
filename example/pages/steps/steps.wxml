      </t-steps>
    </view>

    <view class="demo-section__desc">竖向简化只读步骤条</view>
    <view class="group">
      <t-steps
        class="demo-steps vertical"
        current="1"
        readonly="true"
        direction="vertical"
        type="dot"
      >
        <t-step title="事件描述" />
        <t-step title="事件描述" />
        <t-step title="事件描述" />
      </t-steps>
    </view>

    <view class="demo-section__desc">自定义内容步骤条</view>
    <view class="group">
      <t-steps class="demo-steps vertical" current="1" readonly="true" direction="vertical">
        <t-step title="已完成步骤">
          <view slot="content">可自定义此处内容</view>
