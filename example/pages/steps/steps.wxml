    <view class="demo-section__desc">竖向只读步骤条</view>
    <view class="group">
      <t-steps class="demo-steps vertical" current="1" readonly="true" direction="vertical">
        <t-step title="已完成步骤" />
        <t-step title="当前步骤" />
