  bindrefresh="onPullDownRefresh1"
>
  <t-loading
    slot="loading"
    loading
    error="{{error}}"
    size="38px"
    showType="icon-only"
    layout="default"
    bind:reload="toggleError"
  >
  </t-loading>
  <view class="flex pulldown-reflesh_content">
    <t-skeleton
      wx:for="{{2}}"
      wx:key="index"
      row="3"
      loading-class="skeletion-item"
      row-class="skeletion-row"
      row-width="{{['340rpx', '340rpx', '218rpx']}}"
      rowHeight="{{['342rpx', '32rpx', '32rpx']}}"
    />
    <view class="text">拖拽该区域演示 中间下拉刷新</view>
  </view>
</t-pull-down-refresh>
