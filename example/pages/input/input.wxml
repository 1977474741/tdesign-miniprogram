<!--示例页面-->
<view class="input-example">
  <view class="demo-title">Input 输入框</view>
  <view class="demo-desc">用于单行文本信息输入。</view>
  <t-demo title="01 类型" desc="基础文本框">
    <t-input prefixIcon="slot" placeholder="请输入文字">
      <text slot="prefixIcon">标签文字</text>
    </t-input>
  </t-demo>
  <t-demo title="" desc="必填、选填文本框">
    <t-input prefixIcon="slot" placeholder="请输入文字">
      <text slot="prefixIcon">标签文字<text style="color: #e34d59"> *</text> </text>
    </t-input>
    <t-input prefixIcon="slot" placeholder="请输入文字(选填)">
      <text slot="prefixIcon">标签文字</text>
    </t-input>
  </t-demo>
  <t-demo title="" desc="无标题文本框">
    <t-input placeholder="请输入文字" />
  </t-demo>
  <t-demo title="" desc="带提示信息文本框">
    <t-input prefixIcon="slot" placeholder="请输入文字" suffixIcon="error-circle-filled">
      <text slot="prefixIcon">标签文字</text>
    </t-input>
  </t-demo>
  <t-demo title="" desc="长标题文本框">
    <t-input prefixIcon="slot" placeholder="预设文本">
      <text slot="prefixIcon">超长需换行的标签</text>
    </t-input>
  </t-demo>
  <t-demo title="02 状态" desc="文本框状态">
    <t-input prefixIcon="slot" placeholder="请输入文字" value="已输入文字">
      <text slot="prefixIcon">标签文字</text>
    </t-input>
    <t-input prefixIcon="slot" value="一段错误填写的内容" error-message="提示信息">
      <text slot="prefixIcon">标签文字</text>
    </t-input>
    <t-input prefixIcon="slot" value="不可编辑文字" disabled>
      <text slot="prefixIcon">标签文字</text>
    </t-input>
  </t-demo>
  <t-demo title="03 特殊类型" desc="特殊文本类型">
    <view class="cell">
      <t-input
        prefixIcon="slot"
        type="password"
        value="{{textPassword}}"
        clearable
        bind:clear="onClear"
      >
        <text slot="prefixIcon">输入密码</text>
      </t-input>
      <t-input
        prefixIcon="lock-on"
        type="password"
        value="{{textPassword}}"
        clearable
        bind:clear="onClear"
      >
      </t-input>
    </view>
    <view class="cell">
      <t-input placeholder="请输入验证码" prefixIcon="slot" suffixIcon="slot">
        <text slot="prefixIcon">验证码</text>
        <view slot="suffixIcon">
          <image
            style="width: 72px; height: 36px; display: block; margin-top: -6px; margin-bottom: -6px"
            src="https://wwcdn.weixin.qq.com/node/wework/images/202010241547.ac6876be9c.png"
            mode="heightFix"
          />
        </view>
      </t-input>
    </view>
    <view class="cell">
      <t-input
        placeholder="请输入手机号码"
        value="{{phoneNumber}}"
        type="number"
        error-message="{{phoneError ? '手机号输入不正确' : ''}}"
        bindchange="onPhoneInput"
        suffixIcon="slot"
      >
        <view slot="suffixIcon" class="verify"> 发送验证码 </view>
      </t-input>
    </view>
    <view class="cell">
      <t-input
        prefixIcon="slot"
        placeholder="0.00"
        suffixIcon="slot"
        bindchange="onPriceInput"
        vlaue="{{price}}"
        error-message="{{priceError ? '请输入正确的价格' : ''}}"
        align="right"
        t-class-error-msg="error-msg"
      >
        <text slot="prefixIcon">价格</text>
        <text slot="suffixIcon">元</text>
      </t-input>
    </view>
    <view class="cell">
      <t-input
        prefixIcon="slot"
        placeholder="填写个数"
        suffixIcon="slot"
        type="number"
        align="right"
      >
        <text slot="prefixIcon">数量</text>
        <text slot="suffixIcon">个</text>
      </t-input>
    </view>
  </t-demo>
  <t-demo title="04 规格" desc="文本框尺寸规格">
    <view class="cell">
      <t-input prefixIcon="slot" placeholder="请输入文字">
        <text slot="prefixIcon">小规格H48</text>
      </t-input>
    </view>
    <view class="cell">
      <t-input prefixIcon="slot" placeholder="请输入文字" size="medium">
        <text slot="prefixIcon">中规格H56</text>
      </t-input>
    </view>
  </t-demo>
  <t-demo title="05 内容位置" desc="文本框内容位置">
    <view class="cell">
      <t-input prefixIcon="slot" placeholder="请输入文字">
        <text slot="prefixIcon">左对齐</text>
      </t-input>
    </view>
    <view class="cell">
      <t-input prefixIcon="slot" placeholder="请输入文字" align="center">
        <text slot="prefixIcon">居中</text>
      </t-input>
    </view>
    <view class="cell">
      <t-input prefixIcon="slot" placeholder="请输入文字" align="right">
        <text slot="prefixIcon">右对齐</text>
      </t-input>
    </view>
  </t-demo>
  <t-demo title="06 字数限制" desc="文本框字数限制">
    <view class="cell">
      <t-input placeholder="最大输入10个字符" maxlength="{{10}}" />
    </view>
    <view class="cell">
      <t-input placeholder="最大输入10个字符，汉字算两个" maxcharacter="{{10}}" />
    </view>
  </t-demo>
</view>
