<view class="demo">
  <view class="demo-title">Tabs 选项卡</view>
  <view class="demo-desc">用作一组平行关系页面/内容的切换器</view>
  <t-demo title="01 类型" desc="横向选项卡">
    <t-tabs
      value="{{0}}"
      bind:change="onTabsChange"
      bind:click="onTabsChange"
      class="t-tabs-horizontal"
      t-class-item="scroll-item-horizontal"
    >
      <t-tab-panel label="标签页一" value="0">标签一内容</t-tab-panel>
      <t-tab-panel label="标签页二" value="1">标签二内容</t-tab-panel>
    </t-tabs>
  </t-demo>
  <t-demo>
    <t-tabs
      value="{{0}}"
      bind:change="onTabsChange"
      bind:click="onTabsChange"
      class="t-tabs-horizontal"
      t-class-item="scroll-item-horizontal"
    >
      <t-tab-panel label="标签页一" value="0">标签一内容</t-tab-panel>
      <t-tab-panel label="标签页二" value="1">标签二内容</t-tab-panel>
      <t-tab-panel label="标签页三" value="1">标签三内容</t-tab-panel>
    </t-tabs>
  </t-demo>
  <t-demo>
    <t-tabs
      value="{{0}}"
      bind:change="onTabsChange"
      bind:click="onTabsChange"
      class="t-tabs-horizontal"
      t-class-item="scroll-item-horizontal"
    >
      <t-tab-panel label="标签页一" value="0">标签一内容</t-tab-panel>
      <t-tab-panel label="标签页二" value="1">标签二内容</t-tab-panel>
      <t-tab-panel label="标签页三" value="1">标签三内容</t-tab-panel>
      <t-tab-panel label="标签页四" value="1">标签四内容</t-tab-panel>
    </t-tabs>
  </t-demo>
  <t-demo desc="超过屏幕滚动">
    <t-tabs
      value="{{0}}"
      bind:change="onTabsChange"
      bind:click="onTabsChange"
      class="t-tabs-horizontal"
      t-class-item="scroll-item-horizontal"
    >
      <t-tab-panel label="标签页一" value="0">标签一内容</t-tab-panel>
      <t-tab-panel label="标签页二" value="1">标签二内容</t-tab-panel>
      <t-tab-panel label="标签页三" value="1">标签三内容</t-tab-panel>
      <t-tab-panel label="标签页四" value="1">标签四内容</t-tab-panel>
      <t-tab-panel label="标签页五" value="1">标签五内容</t-tab-panel>
      <t-tab-panel label="标签页六" value="1">标签六内容</t-tab-panel>
    </t-tabs>
  </t-demo>
  <t-demo desc="无下划线">
    <t-tabs
      value="{{0}}"
      bind:change="onTabsChange"
      bind:click="onTabsChange"
      showBottomLine="{{false}}"
      class="t-tabs-horizontal"
      t-class-item="scroll-item-horizontal"
    >
      <t-tab-panel label="标签页一" value="0">标签一内容</t-tab-panel>
      <t-tab-panel label="标签页二" value="1">标签二内容</t-tab-panel>
      <t-tab-panel label="标签页三" value="1">标签三内容</t-tab-panel>
      <t-tab-panel label="标签页四" value="1">标签四内容</t-tab-panel>
    </t-tabs>
  </t-demo>
  <t-demo title="02 状态" desc="选项卡状态">
    <t-tabs
      value="0"
      bind:change="onTabsChange"
      bind:click="onTabsChange"
      t-class-item="scroll-item-horizontal"
      class="t-tabs-horizontal"
    >
      <t-tab-panel label="标签页一" value="0">标签一内容</t-tab-panel>
      <t-tab-panel label="标签页二" value="1">标签二内容</t-tab-panel>
      <t-tab-panel label="标签页三" value="1" disabled>标签三内容</t-tab-panel>
    </t-tabs>
  </t-demo>
  <t-demo title="03 特殊类型" desc="竖向选项卡">
    <t-tabs
      value="0"
      placement="left"
      bind:change="onTabsChange"
      bind:click="onTabsChange"
      t-class-item="scroll-item-vertical"
    >
      <t-tab-panel
        wx:for="{{[1,2,3,4,5,6]}}"
        wx:key="index"
        label="标签页{{index}}"
        value="{{index}}"
      >
        标签页{{index}}
      </t-tab-panel>
    </t-tabs>
  </t-demo>
  <t-demo title="04 规格" desc="选中态文字尺寸规格">
    <t-tabs
      value="{{0}}"
      bind:change="onTabsChange"
      swipeable
      bind:disabled="onTabsDisabled"
      bind:click="onTabsChange"
      t-class-item="scroll-item-horizontal"
      class="t-tabs-horizontal"
      t-class-active="active-item"
    >
      <t-tab-panel label="大尺寸" value="0">标签一内容</t-tab-panel>
      <t-tab-panel label="标签页二" value="1">标签二内容</t-tab-panel>
      <t-tab-panel label="标签页三" value="2">标签三内容</t-tab-panel>
      <t-tab-panel label="标签页四" value="2">标签四内容</t-tab-panel>
    </t-tabs>
  </t-demo>
  <t-demo>
    <t-tabs
      value="{{0}}"
      bind:change="onTabsChange"
      swipeable
      bind:disabled="onTabsDisabled"
      bind:click="onTabsChange"
      t-class-item="scroll-item-horizontal"
      class="t-tabs-horizontal"
    >
      <t-tab-panel label="小尺寸" value="0">标签一内容</t-tab-panel>
      <t-tab-panel label="标签页二" value="1">标签二内容</t-tab-panel>
      <t-tab-panel label="标签页三" value="2">标签三内容</t-tab-panel>
      <t-tab-panel label="标签页四" value="2">标签四内容</t-tab-panel>
    </t-tabs>
  </t-demo>
</view>
